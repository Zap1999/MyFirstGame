<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainPane" prefHeight="900.0" prefWidth="600.0" style="-fx-background-color: #263238;" stylesheets="@../DarkTheme.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="StartPackage.RegisterController">
   <top>
      <Label text="Registration form" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Username:" />
            <TextField fx:id="user" />
            <Label text="Password:" />
            <PasswordField fx:id="pass1" />
            <Label text="Let me check password (type once more, please): " />
            <PasswordField fx:id="pass2" />
            <Label />
            <Button mnemonicParsing="false" onAction="#register" prefHeight="71.0" prefWidth="600.0" text="Register" />
            <Label />
            <Button mnemonicParsing="false" onAction="#backToLogin" prefHeight="71.0" prefWidth="600.0" text="Back" />
         </children>
      </VBox>
   </center>
</BorderPane>
