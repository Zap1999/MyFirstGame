<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainPane" prefHeight="900.0" prefWidth="600.0" style="-fx-background-color: #263238;" stylesheets="@../DarkTheme.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ChatPackage.ChatViewController">
    <center>
        <VBox fx:id="msgsBox" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <Label />
            </children>
        </VBox>
    </center>
   <bottom>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <TextArea fx:id="myMsg" prefHeight="110.0" prefWidth="600.0" />
            <Button mnemonicParsing="false" onAction="#sendMsg" prefHeight="62.0" prefWidth="600.0" text="Send" />
              <Button mnemonicParsing="false" onAction="#back" prefHeight="0.0" prefWidth="600.0" stylesheets="@../DarkTheme.css" text="Back to menu">
                  <font>
                      <Font size="20.0" />
                  </font>
            </Button>
         </children>
      </VBox>
   </bottom>
   <top>
      <VBox alignment="TOP_CENTER" prefHeight="56.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Have you seen the weather out there? Ohh! At least it's warm in here!" textFill="#d5d0d0">
               <font>
                  <Font size="37.0" />
               </font>
            </Label>
            <Button fx:id="refresh" onAction="#refresh" mnemonicParsing="false" prefHeight="26.0" prefWidth="65.0">
               <graphic>
                  <ImageView fitHeight="21.0" fitWidth="26.0">
                     <image>
                        <Image url="@../img/refresh.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </VBox>
   </top>
</BorderPane>
