<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainPane" prefHeight="900.0" prefWidth="600.0" style="-fx-background-color: #263238;" stylesheets="@../DarkTheme.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MenuPackage.MainMenuController">
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <ImageView fitHeight="242.0" fitWidth="600.0" smooth="false">
                   <image>
                      <Image url="@../img/main_menu.jpg" />
                   </image>
                </ImageView>
                <Button fx:id="heroBtn" mnemonicParsing="false" onAction="#toHero" prefHeight="90.0" prefWidth="600.0" styleClass="menuBtn" stylesheets="@../DarkTheme.css" text="My Hero">
                <font>
                     <Font size="20.0" />
                </font></Button>
                <Button fx:id="missionsBtn" mnemonicParsing="false" onAction="#toMissions" prefHeight="90.0" prefWidth="604.0" styleClass="menuBtn" stylesheets="@../DarkTheme.css" text="Missions"  />
                <Button fx:id="shopBtn" mnemonicParsing="false" onAction="#toShop" prefHeight="90.0" prefWidth="604.0" styleClass="menuBtn" stylesheets="@../DarkTheme.css" text="Shop"  />
                <Button fx:id="chatBtn" mnemonicParsing="false" onAction="#toChat" prefHeight="90.0" prefWidth="604.0" styleClass="menuBtn" stylesheets="@../DarkTheme.css" text="Chat"  />
            </children>
        </VBox>
    </center>
   <top>
      <Label text="Ready for an adventure?" textFill="#d5d0d0" BorderPane.alignment="CENTER">
         <font>
            <Font size="37.0" />
         </font>
      </Label>
   </top>
</BorderPane>
